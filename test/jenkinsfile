pipeline {
  agent any

  tools {
    nodejs "node 21.6.2"
  }

  stages {

    stage('Install') {      
      steps { 
        git branch: 'main', url: 'https://github.com/xp3ctr0/test.git'
        dir('test') {
          sh 'npm install'
        }
      }
    }
 
    stage('Test') {
      steps {
        dir('test') {
          sh 'npm run test'
        }
      }
    }
 
    stage('Build') {
      steps { 
        dir('test') {
          sh 'npm run build' 
        }        
      }
    }
  }
  post {
    always{
      mail to: "jegc9323@gmail.com",
      subject: "Test Email Jhon",
      body: "sos un berraco"
    }
  }
}
pipeline {
  agent any

  tools {
    nodejs "node 21.6.2"
  }

  stages {

    stage('Install') {      
      steps { 
        git branch: 'main', url: 'https://github.com/xp3ctr0/test.git'
        dir('test') {
          sh 'npm install'
        }
      }
    }
 
    stage('Test') {
      parallel {
        stage('Static code analysis') {
            steps { echo 'corriendo Test' }
        }
        stage('Unit tests') {
            steps { sh 'npm run test' }
        }
      }
    }
 
    stage('Build') {
      steps { sh 'npm run build' }
    }
  }
}